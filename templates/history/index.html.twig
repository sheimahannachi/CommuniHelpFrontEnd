  <script>
  const text = " Chaque donateur est une lumi√®re qui transforme le monde üåü . Avec la gr√¢ce de Dieu, nous acheminons ces dons vers ceux qui en ont le plus besoin üíñ.";
const textContainer = document.querySelector(".animated-text");

function animateText() {
  let index = 0;
  const interval = setInterval(() => {
    textContainer.textContent += text[index];
    index++;
    if (index === text.length) {
      clearInterval(interval);
    }
  }, 100);
}

animateText();

  
  </script>
  
  
  
  
