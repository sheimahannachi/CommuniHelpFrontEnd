{% block blog %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(form.nomProd, "Nom", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.nomProd, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nomProd) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.prixProd, "Prix", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.prixProd, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.prixProd) }}
                    </div>
                </div>





                

                <div class="form-group">
                    {{ form_label(form.descProd, "Description", {'label_attr': {'class': 'control-label'}}) }}
                    {{ form_widget(form.descProd, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.descProd) }}
                </div>

                <div class="form-group row">
                    <div class="col-md-6">
                        {{ form_label(form.statutProd, "Statut", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.statutProd, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.statutProd) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.image, "Image", {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.image) }}
                    </div>
                </div>

                <div class="form-group">
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    









   
{% endblock %}



